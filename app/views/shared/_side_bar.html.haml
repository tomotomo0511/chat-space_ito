      %p.chat-side__header__box__username
        = current_user.name
      %ul.chat-side__header__box__menu
        %li.chat-side__header__box__edit
          = link_to "#" do
            = icon('fas', 'edit') 
        %li.chat-side__header__box__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon') 
